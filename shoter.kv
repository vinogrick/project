#:kivy 1.10.0

<Player>:
	size: (self.parent.width*5)/70, (self.parent.height*5)/24
	bullets: []
	score: 0
	lifes: 3
	koeff: self.parent.width/1920 * 2
	center_coords: [self.parent.width//2, self.parent.height//2 + self.size[1]//4]
	canvas:
		Rectangle:
			source: 'car3.png'
			pos: self.pos
			size: self.size
			


<ShooterGame>:

	player: igrok
	if_joy: 0
	enemies: []
	canvas:
		Rectangle:
			source: 'bg.jpg'
			pos: self.pos
			size: self.size
	Player:
		id: igrok
		center:  [self.parent.width//2, self.parent.height//2 + self.size[1]//3]
	Label:
		color: (0, 1, 0, 1)
		font_size: (root.width/1920)*70
		center_x: root.width//6
		top: root.top
		text: 'Score: ' + str(root.player.score)
	Label:
		color: (0, 1, 0, 1)
		font_size: (root.width/1920)*70
		center_x: root.width//6*5
		top: root.top
		text: 'Lifes: ' + str(root.player.lifes)