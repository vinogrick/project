#:kivy 1.10.0

<ShooterMenu>:
	canvas:
		Rectangle:
			size: root.width, root.height
			pos: self.pos
			source: 'ilon.png'
	Button:
		size: root.width//3, root.height//4
		pos: root.width//2 - self.size[0]//2, root.height//2 - self.size[1]//2
		font_size: 40
		background_color: (0, 1, 1, 1)		
		text: 'GO ILON!'
		on_release: root.start()
	Button:
		size: root.width//4, root.height//5
		pos: root.width//2 - self.size[0]//2, root.height//2 - self.size[1]//2 - root.height//4
		font_size: 35
		background_color: (0, 1, 0, 1)		
		text: 'Oh really wanna exit?'
		on_release: run.stop()